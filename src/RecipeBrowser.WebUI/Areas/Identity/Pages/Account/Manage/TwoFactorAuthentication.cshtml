@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Двухфакторна аутентифікація (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>У вас не залишилося кодів відновлення.</strong>
                    <p>Вам потрібно <a asp-page="./GenerateRecoveryCodes">згенерувати новий набір кодів відновлення</a> перш ніж ви зможете ввійти за допомогою коду відновлення.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>У вас залишився 1 код відновлення.</strong>
                    <p>Ви можете <a asp-page="./GenerateRecoveryCodes">згенерувати новий набір кодів відновлення</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Ви маєте @Model.RecoveryCodesLeft кодів відновлення.</strong>
                    <p>Ви повинні <a asp-page="./GenerateRecoveryCodes">згенерувати новий набір кодів відновлення</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">Забути цей браузер</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">Відключити 2FA</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Скинути коди відновлення</a>
        }

        <h4>Програма аутентифікації</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Додати програму аутентифікації</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Налаштувати програму аутентифікації</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">Скинути програму аутентифікації</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Політика конфіденційності та файлів cookie не прийнята.</strong>
            <p>Перш ніж увімкнути двофакторну автентифікацію, ви повинні прийняти політику.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
