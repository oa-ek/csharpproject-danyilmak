@using RecipeBrowser.Core.Entities
@using RecipeBrowser.WebUI.Helpers
@model List<Recipe>

@{
    ViewData["Title"] = "Рецепти";
}
<div class="container-fluid px-5 py-3">

    <a href="/Recipe/create" class="btn btn-success float-end">Додати</a>
    <a href="/Recipe/index?viewtype=@ViewType.Cards" class="btn btn-secondary float-end mx-3">Картки</a>

    <h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

    <table class="table table-bordered text-white">
        <thead>
            <tr class="text-center align-middle">
                <th>Назва</th>
                <th>Час в хв.</th>
                <th>Спосіб</th>
                <th>Складність</th>
                <th>Автор</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr class="text-center align-middle">
                    <td class="text-center align-middle">
                        <strong>@m.Title</strong>
                    </td>
                    <td>@m.CookDuration</td>
                    <td>@m.Type.Title</td>
                    <td>@m.Difficulty.Title</td>
                    <td>@m.Creator.Email</td>
                    <td class="text-center d-flex justify-content-between">
                        <a href="/Recipe/details/@m.Id" class="btn btn-info">Детальніше</a>
                        <a href="/Recipe/edit/@m.Id" class="btn btn-warning">Редагувати</a>
                        <a href="#" data-id="@m.Id" data-name="@m.Title" class="btn btn-danger btn-remove">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!--Modal for delete-->
<div class="modal" tabindex="-1" id="modalQuestion">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Видалення</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Чи справді Ви бажаєте видалити рецепт <strong class="selectedName">-</strong>?</p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn-primary btn btn-remove-approve w-25">Так</a>
                <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Скасувати</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            let selected_id = "";
            let select_name = "";
            let row = null;

            $(".btn-remove").click(function () {

                row = $(this).closest("tr");
                selected_id = $(this).attr("data-id");
                selected_name = $(this).attr("data-name");
                $(".selectedName").html(selected_name);
                $("#modalQuestion").modal("show");
            });


            $(".btn-remove-approve").click(function () {

                $.ajax({
                    url: '/Recipe/delete',
                    type: 'DELETE',
                    data: { id: selected_id },
                    success: function (result) {
                        row.fadeOut();
                        $("#modalQuestion").modal("hide");
                    }
                });

            });
        })
    </script>
}