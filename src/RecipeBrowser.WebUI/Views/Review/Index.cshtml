@using RecipeBrowser.Core.Entities
@model List<Review>

@{
    ViewData["Title"] = "Відгуки";
}
<div class="container-fluid px-5 py-3">

    <a href="/Review/create" class="btn btn-success float-end">Додати</a>

    <h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

    <table class="table table-bordered text-white">
        <thead>
            <tr class="text-center align-middle">
                <th>Автор</th>
                <th>Рецепт</th>
                <th>Рейтинг</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr class="text-center align-middle">
                    <td class="text-center align-middle">
                        <strong>@m.User.Email</strong>
                    </td>
                    <td class="text-center align-middle">
                        <strong>@m.Recipe.Title</strong>
                    </td>
                    <td class="text-center align-middle">
                        <div class="ratingDiv">
                            <span class="my-rating-4" data-rating="@m.Rating.ToString().Replace(',', '.')"></span>
                        </div>
                    </td>
                    <td class="text-center d-flex justify-content-evenly">
                        <a href="/Review/edit/@m.Id" class="btn btn-warning">Редагувати</a>
                        <a href="#" data-id="@m.Id" class="btn btn-danger btn-remove">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!--Modal for delete-->
<div class="modal" tabindex="-1" id="modalQuestion">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Видалення</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Чи справді Ви бажаєте видалити цей відгук?</p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn-primary btn btn-remove-approve w-25">Так</a>
                <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Скасувати</button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/star-rating-svg.css" />
@section Scripts {
    <script src="~/js/jquery.star-rating-svg.js"></script>
    <script>
        $(function () {

            $(".my-rating-4").starRating({
                emptyColor: 'lightgray',
                hoverColor: 'salmon',
                activeColor: 'cornflowerblue',
                strokeWidth: 0,
                useGradient: false,
                readOnly: true,
                starSize: 30
            });

        });
    </script>
    <script>
        $(function () {
            let selected_id = "";
            let row = null;

            $(".btn-remove").click(function () {

                row = $(this).closest("tr");
                selected_id = $(this).attr("data-id");
                $("#modalQuestion").modal("show");
            });


            $(".btn-remove-approve").click(function () {

                $.ajax({
                    url: '/Review/delete',
                    type: 'DELETE',
                    data: { id: selected_id },
                    success: function (result) {
                        row.fadeOut();
                        $("#modalQuestion").modal("hide");
                    }
                });

            });
        })
    </script>
}