﻿@using RecipeBrowser.Core.Entities.Recipes
@model Recipe

@{
    var types = ViewBag.Users as List<SelectListItem>;
}

<h1>Новий рецепт</h1>


<form asp-action="Create" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="col-md-6">
            <div data="mb-3">
                @Html.DisplayNameFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                <span asp-validation-for="Title" class="text-danger" />
            </div>
            <div data="mb-3">
                @Html.DisplayNameFor(model => model.Ingredients)
                @Html.TextBoxFor(model => model.Ingredients, new { @class = "form-control" })
                <span asp-validation-for="Ingredients" class="text-danger" />
            </div>
            <div data="mb-3">
                @Html.DisplayNameFor(model => model.Instructions)
                @Html.TextBoxFor(model => model.Instructions, new { @class = "form-control" })
                <span asp-validation-for="Instructions" class="text-danger" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mt-3">
                @Html.DisplayNameFor(model => model.Users)
                <select asp-for="UserId" asp-items="@(types)" id="x1" class="form-control">
                    <option value="0" selected="selected">- Оберіть користувача -</option>
                </select>

                <input type="hidden" asp-for="UserId" />
            </div>
            <div class="form-group mt-3">
                @Html.DisplayNameFor(model => model.ImageFile)
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <button class="btn btn-primary btn-block" style="width: 100% !important" type="submit">Зберегти</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}