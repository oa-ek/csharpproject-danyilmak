﻿@using RecipeBrowser.Core.Entities.Recipes
@model Recipe

<h1>Редагування рецепту: @Model.Title</h1>


<form asp-action="Edit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.Id)

    <div data="mb-3">
        @Html.DisplayNameFor(model => model.Ingredients)
        @Html.TextBoxFor(model => model.Ingredients, new { @class = "form-control" })
        <span asp-validation-for="Ingredients" class="text-danger" />
    </div>

    <div data="mb-3">
        @Html.DisplayNameFor(model => model.Instructions)
        @Html.TextBoxFor(model => model.Instructions, new { @class = "form-control" })
        <span asp-validation-for="Instructions" class="text-danger" />
    </div>

    <div class="form-group mt-3">
        @Html.DisplayNameFor(model => model.ImageFile)
        <input asp-for="ImageFile" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Зберегти</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}