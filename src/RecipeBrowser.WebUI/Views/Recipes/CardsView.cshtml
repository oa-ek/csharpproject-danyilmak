﻿@using RecipeBrowser.Core.Entities.Recipes
@using RecipeBrowser.WebUI.Helpers
@model List<Recipe>

@{
    ViewData["Title"] = "Список рецептів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/recipes/create" class="btn btn-success float-end">Додати рецепт</a>
<div class="float-end" style="width:10px"></div>
<a href="/recipes/index?viewtype=@ViewType.Table" class="btn btn-secondary float-end"><i class="fa-solid fa-table"></i> Як таблиця</a>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<div class="row">
    @foreach(var p in Model) 
    {
        <div class="col-md-3">
        <div class="card mb-3">
            <img class="card-img-top" src="@p.ImagePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@p.Title</h5>
                <p class="card-text">Трохи випадково тексту.</p>
                <a href="#" class="btn btn-primary">Перейти</a>
            </div>
            </div>
        </div>
    }
</div>