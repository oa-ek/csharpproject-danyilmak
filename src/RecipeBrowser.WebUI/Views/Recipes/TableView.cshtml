﻿@using RecipeBrowser.Core.Entities.Recipes
@using RecipeBrowser.WebUI.Controllers
@using RecipeBrowser.WebUI.Helpers
@model List<Recipe>

@{
    ViewData["Title"] = "Список рецептів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/recipes/create" class="btn btn-success float-end">Додати рецепт</a>
<div class="float-end" style="width:10px"></div>
<a href="/recipes/index?viewtype=@ViewType.Cards" class="btn btn-secondary float-end"><i class="fa-regular fa-clone"></i> Як картки</a>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Назва рецепту</th>
                    <th>Інгредієнти</th>
                    <th>Інструкції</th>
                    <th>За авторством</th>
                    <th>Взаємодія</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            Рецепт: <strong>@p.Title</strong><br />
                        </td>
                        <td>
                            <p>@p.Ingredients</p>
                        </td>
                        <td>
                            <p>@p.Instructions</p>
                        </td>
                        <td>
                            <strong>@p.Users</strong>
                        </td>
                        <td>
                            <a href="/recipes/details/@p.Id" class="btn btn-primary">Детально</a>
                            <a href="/recipes/edit/@p.Id" class="btn btn-warning">Редагувати</a>
                            <a href="/recipes/delete/@p.Id" class="btn btn-danger">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>